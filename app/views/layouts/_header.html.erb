<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Rails Demo", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", show_path %></li>
				<% if current_user %>
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
					<li><%= link_to "Log out", logout_path%></li>
				<% else %>
        	<li><%= link_to "Log in", login_path %></li>
				<% end %>
      </ul>
      <div class="col-sm-3 col-md-3">
        <%= form_tag controller: 'artists', action: 'index', method: 'get', class: 'navbar-form', role: 'search' do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], size: 150, placeholder: "Search", class: "form-control"%>
            <div class="input-group-btn">
              <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="glyphicon glyphicon-search"></i>
              <% end %>
            </div>
        </div>
      <% end %>
      </div>
    </div>
    </nav>
  </div>
</header>
