<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Rails Demo", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Help",   '#' %></li>
        <li><%= link_to "Log in", '#' %></li>
        <!-- these two shouldn't be in header, they should be in index with sign up/login-->
  	    <li><%= link_to(image_tag("google-sign-in.png"),"/auth/google_oauth2") %></li>
	      <li><%= link_to(image_tag("fb-login.png"), "/auth/facebook") %></li>
      </ul>
      <div class="col-sm-3 col-md-3">
        <%= form_tag controller: 'artists', action: 'index', method: 'get', class: 'navbar-form', role: 'search' do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], size: 150, placeholder: "Search", class: "form-control"%>
            <div class="input-group-btn">
              <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="glyphicon glyphicon-search"></i>
              <% end %>
            </div>
        </div>
      <% end %>
      </div>
    </div>
    </nav>
  </div>
</header>
