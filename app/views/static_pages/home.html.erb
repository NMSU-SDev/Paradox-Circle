<% provide( :title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="quote_form">
        <%= render 'shared/quote_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class = "center jumbotron">
    <h1> Home </h1>
    <h2>Welcome to Paradox Circle</h2>
    <p>Click the logo to sign up now!</p>

    <%= link_to image_tag("extremeParadox.jpg", alt: "Paradox Circle logo"), root_path %>
  </div>
<% end %>
