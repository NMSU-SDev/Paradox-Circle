<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <p>Hello, <%= @user.name %></p>
      </h1>
      
    </section>
  </aside>
   <div class="col-md-8">
      <h3>Quote Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    <% if logged_in? %>
      <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="quote_form">
            <%= render 'shared/quote_form' %>
          </section>
        </aside>
      <% end %>
      </div>
      <%= month_calendar do |date| %>
      <%= date.day %>
    <% end %>
  </div>
</div>

